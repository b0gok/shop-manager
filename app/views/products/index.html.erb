<p id="notice"><%= notice %></p>

<h1 class="mt-4">Товары</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Артикул</th>
      <th scope="col">Название</th>
      <th scope="col">Производитель</th>
      <th scope="col">Количество</th>
      <th scope="col">Тэги</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <th scope="row"><%= product.sku %></th>
        <td><%= product.title %></td>
        <td><%= product.manufacturer&.title %></td>
        <td><%= product.quantity %></td>
        <td><%= tags_in_pillboxes(product.tag_list) %></td>
        <td><%= link_to 'Просмотр', product %></td>
        <td><%= link_to 'Редактировать', edit_product_path(product) %></td>
        <td><%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

