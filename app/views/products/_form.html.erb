<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :sku, class: 'form-label' %>
    <%= form.text_field :sku, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :quantity, class: 'form-label' %>
    <%= form.number_field :quantity, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.collection_select :manufacturer_id, Manufacturer.order(:title), :id, :title, {}, { class: 'form-select' } %>
  </div>

  <%= form.submit 'Сохранить', class: 'btn btn-primary' %>
<% end %>
